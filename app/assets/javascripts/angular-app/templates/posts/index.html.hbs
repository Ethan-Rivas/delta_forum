<div class="options-bar">
  <div class="pull-right">
    <a href="/post/new">
      <button class="btn btn-primary align-btn" type="button" name="button">Nuevo Post</button>
    </a>
    <button class="btn btn-primary align-btn" type="button" name="button">Perfil</button>
  </div>
</div>

<div class="">
  <div class="col-md-12" ng-repeat="post in posts">
    <div class="post-holder">
      <div class="user-image">

      </div>
    </div>

    <div class="post-holder post-block">
      <a href="/post/{{post.id}}/view" title="{{post.title}}">
        <span class="post-title">{{post.title}}</span>
      </a>
      <div>Por {{post.user.email}}, {{post.created_at | date : 'MMMM d, y' }}</div>
    </div>
  </div>
</div>
